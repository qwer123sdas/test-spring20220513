<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.choong.spr.mapper.ReplyMapper">
<!-- 댓글 목록 -->
	<select id="listReplyByBoardId" resultType="com.choong.spr.domain.ReplyDto">
	SELECT id id, 
	       board_id boardId,
	       content,
	       inserted
	FROM Reply
	WHERE board_id = #{boardId}
	ORDER BY id DESC
	</select>
<!-- 댓글 추가 -->
	<insert id="addReply">
		INSERT INTO Reply (board_id, content)
		VALUE(#{boardId}, #{content})
	</insert>
	
<!-- 댓글 수정 -->
	<update id="modifyReply">
		UPDATE Reply
		SET content = #{content }
		WHERE id = #{id }
	</update>
	
<!--댓글 삭제  -->
	<!-- 댓글만 지울 때 -->
	<delete id="removeReply">
		DELETE FROM Reply
		WHERE id = #{id}
	</delete>
	<!-- 게시글 지울 때, -->
	<delete id="deleteReplyByBoard">
		DELETE FROM Reply
		WHERE board_id = #{boardId }
	</delete>
</mapper>

